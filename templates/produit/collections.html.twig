{% extends 'base.html.twig' %}

 {% block title %}Collections{% endblock %}

{% block body %}
 
    <!-- ARTICLES -->
    <section class="pb-7 pt-md-10">
      <div class="container">
        <div class="row">
          <div class="col-12">

            <!-- Heading -->
            <h2 class="mb-0">
              Dernieres Collections
            </h2>

            <!-- Text -->
            <p class="mb-5 text-muted">
              details de la consoles
            </p>
          </div>
          
          {% for produit in produits %}
            <!-- Card -->
            <div class="col-12 col-md-6 d-flex">
                <div class="card mb-6 shadow-light-lg lift lift-lg">
                    <a class="card-img-top" href="{{ path('collections_details', {'slug': produit.slug}) }}">
              <!-- Image -->
                <img src="{{ vich_uploader_asset(produit, 'imageFile') }}" alt="..." class="card-img-top">
                </a>
              <a class="card-body" href="{{ path('collections_details', {'slug': produit.slug}) }}">
                <h3>
                  {{ produit.nom }}
                </h3>

                <!-- Text -->
                <p class="mb-0 text-muted">
                  {{ produit.description|u.truncate(200, '...', false) }}
                </p>
              </a>
              <a class="card-meta mt-auto" href="{{ path('collections_details', {'slug': produit.slug}) }}">
                <hr class="card-meta-divider">
                <!-- Date -->
                <p class="h6 text-uppercase text-muted mb-0 ms-auto">
                  <time>Ajout√©e le {{produit.createdAt|date('d/m/Y') }}</time>
                </p>
              </a>
            </div>
          </div>
        {% endfor %}
        </div>
      </div>
      <div class="d-flex justify-content-center">
        {% do produits.setPageRange(2) %}
        {{ knp_pagination_render(produits, 'base/pagination.html.twig') }}
      </div>
  </section>
  
{% endblock %}

    

  